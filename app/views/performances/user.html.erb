<h2><%="#{@performances.first.user.name}"%></h2>
<table>
	<tr>
	  <td valign="top">
		<div style="border-size:1px; border-color: gray; border-style:solid;width:300px; padding:10px;">
		    <strong>Car Make: </strong><%="#{@performances.first.user.car.make}"%><br/>
		    <strong>Car Model: </strong><%=link_to "#{@performances.first.user.car.model}", car_info_path(@performances.first.user.id)%><br/>
			<strong>Odometer: </strong><%=@performances.first.user.car.odometer+@performances.sum(:kilometers)%> Kilometers<br/>
			<strong>Average KM/Gal: </strong><%="#{(@performances.average(:km_gallon)).round(3)}"%> Kilometers
		</div>
	 </td>	
	  <td style="padding-left:50px;">
    	<%= image_tag @performances.first.user.car.photo.url(:medium) %>
	 </td>
	</tr>			
</table>
<br/>
<h3>Latest Entries:</h3>
<div style="width:500px;margin:0px;padding:0px; ">
	<table  style="border-size:1px; border-color: gray; border-style:solid;width:500px; padding:2px;">
	  <tr>
	    <th>Station</th>
	    <th>Date p</th>
	    <th>Kilometers</th>
	    <th>Gallons</th>
	    <th>Cost</th>
	    <th>Cost gallon</th>
	    <th>Km gallon</th>
	  </tr>
	<% @performances.each do |performance| %>   
	  <tr>
	    <td><%= link_to performance.station,station_path(performance.station) %></td>
	    <td><%= performance.date_p %></td>
	    <td><%= performance.kilometers %></td>
	    <td><%= performance.gallons %></td>
	    <td><%= performance.cost %></td>
	    <td><%= performance.cost_gallon %></td>
	    <td><%= performance.km_gallon %></td>
	  </tr>
	<% end %>
	</table>
	<br />
</div>