<h2>Today' Statistics</h2>
<div style="border-size:1px; border-color: gray; border-style:solid;width:300px; padding:10px;">
    <strong>Cheapest $/Gal: </strong><%=link_to "#{@cheapest_cost_gal.station}", station_path(@cheapest_cost_gal.station)%><br/>
    <strong>Best KM/Gal: </strong><%=link_to "#{ @best_km_gallon.user.name} ",user_path(@best_km_gallon.user.id) %><br/>
	<strong>Most Efficient Vehicle: </strong><%=link_to "#{ @most_vehil.user.car.make} #{ @most_vehil.user.car.model}",car_info_path(@most_vehil.user.id) %>
</div>
<br/>
<h3>Latest Entries:</h3>
<div style="width:500px;margin:0px;padding:0px; ">
	<table  style="border-size:1px; border-color: gray; border-style:solid;width:500px; padding:2px;">
	  <tr>
	    <th>Station</th>
	    <th>Date p</th>
	    <th>Kilometers</th>
	    <th>Gallons</th>
	    <th>Cost</th>
	    <th>Cost gallon</th>
	    <th>Km gallon</th>
	  </tr>
	<% @performances.each do |performance| %>   
	  <tr>
	    <td><%= performance.station %></td>
	    <td><%= performance.date_p %></td>
	    <td><%= performance.kilometers %></td>
	    <td><%= performance.gallons %></td>
	    <td><%= performance.cost %></td>
	    <td><%= performance.cost_gallon %></td>
	    <td><%= performance.km_gallon %></td>
	  </tr>
	<% end %>
	</table>
	<br />
</div>	